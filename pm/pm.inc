;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;
;;	描述符的宏
;;	usage: 段基址， 段界限， 段属性
;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
%macro	Descriptor 3
	dw	%2 & 0FFFFh				;
	dw	%1 & 0FFFFh				;
	db	(%1 >> 16) & 0FFh			;
	dw	(%3 & 0F0FFh) | ((%2 >> 8) & 0F00h)	;
	db	(%1 >> 24) & 0FFh			;
%endmacro


