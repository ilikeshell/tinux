;;	门描述符的宏
;;	usage:  选择子，偏移，参数个数，门属性
;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
%macro	Gate 4
	dw	%2 & 0FFFFh				;
	dw	%1 & 0FFFFh				;
	db	%3 & 1Fh				;
	db	%4 & 0FFh				;
	dw	(%2 >> 16) & 0FFFFh			;
%endmacro